@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
    <h2>People count: @ViewBag.Meeting.MaxPeople</h2>
    <h2>Meeting duration: @ViewBag.Meeting.MaxTime</h2>
    <form method="post" action="~/MeetingEdit">
        <label>Max people:</label><br /> 
        <input type="text" name="MaxPeople" /><br />
        <label>Max time:</label><br />
        <input type="text" name="MaxTime" /><br />
        <input type="submit" value="Save" />
    </form>
</div>
