@model Lesson16_19_MeetingRoomApp.Models.MeetingRoomSettings

@{
    ViewData["Title"] = "Meeting Room Settings";
}

<h2>@Model.Name - Settings</h2>

<form asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="MaxPeople" class="control-label"></label>
        <input asp-for="MaxPeople" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="MaxMeetingDuration" class="control-label"></label>
        <input asp-for="MaxMeetingDuration" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
